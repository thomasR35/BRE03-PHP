<h1>Liste des catégories</h1>
<a href="index.php?route=/categories/create">Nouvelle catégorie</a>

<?php if (!empty($categories)): ?>
    <ul>
        <?php foreach ($categories as $cat): ?>
            <li>
                <?= htmlspecialchars($cat->getName()) ?>
                <a href="index.php?route=/categories/edit&id=<?= $cat->getId() ?>">Modifier</a>
                <a href="index.php?route=/categories/delete&id=<?= $cat->getId() ?>"
                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">
                    Supprimer
                </a>
            </li>
        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <p>Aucune catégorie pour le moment.</p>
<?php endif; ?>