<div class="category-card">
    <h1>Liste des catégories</h1>
    <a class="btn btn-new" href="index.php?route=/categories/create">Nouvelle catégorie</a>

    <?php if (!empty($categories)): ?>
        <ul class="category-list">
            <?php foreach ($categories as $cat): ?>
                <li class="category-item">
                    <span class="category-name"><?= htmlspecialchars($cat->getName()) ?></span>
                    <a class="btn btn-edit" href="index.php?route=/categories/edit&id=<?= $cat->getId() ?>">Modifier</a>
                    <a class="btn btn-delete" href="index.php?route=/categories/delete&id=<?= $cat->getId() ?>"
                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">
                        Supprimer
                    </a>
                </li>
            <?php endforeach; ?>
        </ul>
    <?php else: ?>
        <p>Aucune catégorie pour le moment.</p>
    <?php endif; ?>
</div>